{
  "name": "ember-fui-modules",
  "version": "0.1.5",
  "description": "Use Fomantic UI modules in an Ember.js app.",
  "keywords": [
    "ember-addon",
    "fomantic-ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bartocc/ember-fui-modules.git"
  },
  "license": "MIT",
  "author": "Julien Palmas",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each",
    "release": "release-it",
    "version": "auto-changelog -p && mv CHANGELOG.md ../.. && git add ../../CHANGELOG.md"
  },
  "dependencies": {
    "@ember/jquery": "^1.1.0",
    "debug": "^4.1.1",
    "ember-cli-babel": "^7.18.0",
    "ember-cli-htmlbars": "^5.0.0",
    "ember-modifier": "^2.1.1"
  },
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@glimmer/component": "^1.0.3",
    "auto-changelog": "^2.2.1",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "copyfiles": "^2.4.1",
    "ember-auto-import": "^2.0.1",
    "ember-cli": "~3.16.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-eslint": "^5.1.0",
    "ember-cli-inject-live-reload": "^2.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-template-lint": "^2.0.2",
    "ember-cli-uglify": "^3.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^8.0.0",
    "ember-source": "~3.17.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-try": "^1.4.0",
    "eslint-plugin-ember": "^10.0.0",
    "eslint-plugin-node": "^11.1.0",
    "fomantic-ui-css": "^2.8.7",
    "loader.js": "^4.7.0",
    "qunit-dom": "^1.1.0",
    "release-it": "^14.2.2"
  },
  "engines": {
    "node": ">= 9.9.*"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "yarn workspaces foreach -pv run test --test-port=0"
      ],
      "before:npm:release": [
        "copyfiles ../../README.md packages/ember-fui-modules"
      ],
      "before:git:release": [
        "copyfiles CHANGELOG.md ../.."
      ],
      "after:npm:release": [
        "rm README.md"
      ]
    },
    "git": {
      "tagName": "v${version}"
    }
  }
}
